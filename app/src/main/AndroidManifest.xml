<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orangeelephant.sobriety">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="Sobriety"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.EditCounterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AppStartupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CounterFullViewActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AddCounterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.HomeScreenActivity"
            android:exported="true" />
    </application>

</manifest>